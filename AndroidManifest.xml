<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE manifest>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.gr.java_conf.neko_daisuki.android.animator"
    android:versionCode="11"
    android:versionName="1.0.0dev11">
    <!-- Camera.Parameters.setFocusAreas() requires API level 14 -->
    <uses-sdk android:minSdkVersion="14" android:targetSdkVersion="18"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".HostPreferenceActivity"
            android:label="@string/title_activity_host_settings"/>
        <activity
            android:name=".LogActivity"
            android:label="@string/title_activity_log"/>
        <activity
            android:name=".CameraActivity"
            android:label="@string/title_activity_camera_settings"/>
        <activity
            android:name=".ProjectActivity"
            android:label="@string/title_activity_project_settings"/>
        <activity
            android:name=".AboutActivity"
            android:label="@string/title_activity_about"/>
    </application>
</manifest>
