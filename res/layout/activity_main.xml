<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE RelativeLayout>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false">
    <ListView
        android:id="@+id/list"
        android:layout_width="240dip"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/buttons"
        android:layout_toRightOf="@+id/list">
        <SurfaceView
            android:id="@+id/preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
        <jp.gr.java_conf.neko_daisuki.android.animator.widget.FocusAreaView
            android:id="@+id/focus_area_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/list">
        <ImageButton
            android:id="@+id/focus_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_crosshairs"
            android:contentDescription="@string/focus"/>
        <ImageButton
            android:id="@+id/shot_button"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_shot"
            android:contentDescription="@string/shot"/>
    </LinearLayout>
</RelativeLayout>
